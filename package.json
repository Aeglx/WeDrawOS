{
  "name": "wedraw-api",
  "version": "1.0.0",
  "description": "WeDraw应用后端API服务",
  "main": "src/api/index.js",
  "scripts": {
    "start": "node dist/api/index.js",
    "dev": "nodemon src/api/index.js",
    "build": "node build.js",
    "build:start": "node dist/api/index.js",
    "test": "jest",
    "lint": "eslint .",
    "db:migrate": "node src/api/migrations/init-database.js",
    "db:seed": "node src/api/seeds/init-data.js",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "admin:dev": "cd src/admin && vite",
    "admin:build": "cd src/admin && vite build",
    "admin:preview": "cd src/admin && vite preview",
    "buyer:dev": "cd src/buyer && vite",
    "buyer:build": "cd src/buyer && vite build",
    "buyer:preview": "cd src/buyer && vite preview",
    "dev:all": "concurrently \"npm run dev\" \"npm run admin:dev\" \"npm run buyer:dev\"",
    "start:prod": "npm run build && node dist/api/index.js",
    "deploy:prod": "npm run build && echo '部署完成，请配置静态服务器指向dist目录'"
  },
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "amqplib": "^0.10.9",
    "antd": "^5.12.8",
    "axios": "^1.13.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.10",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-fileupload": "^1.5.2",
    "express-validator": "^7.1.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "mysql2": "^3.9.7",
    "node-cron": "^3.0.3",
    "node-llama-cpp": "^3.14.2",
    "nodemailer": "^7.0.9",
    "pg": "^8.16.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-quill": "^2.0.0",
    "react-router-dom": "^6.21.3",
    "recharts": "^3.3.0",
    "redis": "^4.6.13",
    "sequelize": "^1.2.1",
    "sequelize-cli": "^6.6.2",
    "swagger-jsdoc": "^3.7.0",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.18.3",
    "ws": "^8.18.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.202",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.1.1",
    "vite": "^5.0.11"
  },
  "keywords": [
    "wedraw",
    "customer-service",
    "modular",
    "api",
    "express",
    "nodejs",
    "sequelize"
  ],
  "author": "WeDraw Team",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  }
}
